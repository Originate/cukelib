{
  "name": "cucumber-api",
  "version": "0.1.0",
  "description": "Cucumber step definitions for API testing",
  "main": "index.js",
  "scripts": {
    "spec": "./node_modules/.bin/mocha \"lib/**/*_spec.js\"",
    "lint": "./node_modules/.bin/eslint --config .eslintrc.js index.js lib",
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "example_features_xxx": "cd ./example/harness; rm -rf node_modules/cucumber-api; npm install cucumber-api; npm test",
    "universe_features": "ls -1 lib/universe/features/*.feature | xargs -n 1 ./test/cukeuniverse",
    "step_features": "ls -1 lib/step_features/*.feature | xargs -n 1 ./test/cukesteps",
    "service_features": "ls -1 lib/*_service/features/*.feature | xargs -n 1 ./test/cukeservice",
    "service_control_feature": "./node_modules/.bin/cucumberjs --require lib/service_control/features",
    "init_service_control_features": "mkdir -p tmp; touch tmp/nothing; rm tmp/*",
    "run_service_control_features": "ls -1 lib/service_control/features/*.feature | xargs -n 1 npm run service_control_feature",
    "check_service_control_features": "./lib/service_control/features/check_service_control_features.js",
    "service_control_features": "npm run init_service_control_features; npm run run_service_control_features && npm run check_service_control_features",
    "knex_feature": "./node_modules/.bin/cucumberjs --require lib/knex_service/features",
    "knex_features": "./node_modules/.bin/cucumberjs --require lib/knex_service/features lib/knex_service/features",
    "selenium_features": "./node_modules/.bin/cucumberjs --require lib/selenium_services/features/webdriverio_test.js lib/selenium_services/features/webdriverio.feature",
    "features": "npm run universe_features && npm run service_control_features && npm run service_features && npm run step_features",
    "features_cuke1": "npm uninstall cucumber; npm install cucumber@1.3.1; npm run features",
    "features_cuke2": "npm uninstall cucumber; npm install cucumber@latest; npm run features",
    "test": "npm run lint && npm run flow && npm run spec && npm run features_cuke1 && npm run features_cuke2"
  },
  "engines": {
    "node": ">=6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mjhm/cucumber-api.git"
  },
  "keywords": [
    "cucumber",
    "lodash-match-pattern"
  ],
  "author": "John McLaughlin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mjhm/cucumber-api/issues"
  },
  "homepage": "https://github.com/mjhm/cucumber-api#readme",
  "files": [
    "lib",
    "index.js"
  ],
  "peerDependencies": {
    "cucumber": "*",
    "knex": "*",
    "selenium-standalone": "*",
    "webdriverio": "*"
  },
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "babel-plugin-transform-flow-strip-types": "^6.21.0",
    "babel-register": "^6.18.0",
    "eslint": "^3.12.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.8.0",
    "flow-bin": "^0.37.0",
    "http-proxy": "^1.15.2",
    "mocha": "^3.1.2",
    "npm-install-peers": "^1.0.1-rc.3",
    "sqlite3": "^3.1.8"
  },
  "dependencies": {
    "bluebird": "^3.4.0",
    "body-parser": "^1.15.2",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chalk": "^1.1.3",
    "express": "^4.14.0",
    "handlebars": "^4.0.5",
    "js-yaml": "^3.7.0",
    "lodash": "^4.13.1",
    "lodash-match-pattern": "^1.1.0",
    "minimist": "^1.2.0",
    "randexp": "^0.4.3",
    "request": "^2.75.0",
    "request-promise": "^4.1.1"
  }
}
