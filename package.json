{
  "name": "cucumber-api",
  "version": "0.1.0",
  "description": "Cucumber step definitions for API testing",
  "main": "index.js",
  "scripts": {
    "spec": "./node_modules/.bin/mocha \"lib/**/*_spec.js\" \"example/app/**/*_spec.js\" \"example/harness/**/*_spec.js\"",
    "lint": "./node_modules/.bin/eslint --config .eslintrc.js index.js lib example/app example/harness",
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "example_features": "cd ./example/harness; rm -rf node_modules/cucumber-api; npm install cucumber-api; npm test",
    "universe_features": "find lib/universe/features -name *.feature -exec ./test/cukeuniverse {} ';'",
    "step_features": "find lib/step_features -name *.feature -exec ./test/cukesteps {} ';'",
    "server_feature": "./node_modules/.bin/cucumberjs --require lib/service_control/features",
    "init_server_features": "mkdir -p tmp; touch tmp/nothing; rm tmp/*",
    "server_features": "npm run init_server_features; find lib/service_control/features -name *.feature -exec npm run server_feature {} ';'; npm run check_server_features",
    "check_server_features": "./lib/service_control/features/check_server_features.js",
    "knex_feature": "./node_modules/.bin/cucumberjs --require lib/knex_control/features",
    "knex_features": "./node_modules/.bin/cucumberjs --require lib/knex_control/features lib/knex_control/features",

    "features": "npm run universe_features; npm run server_features; npm run knex_features; npm run step_features",
    "test": "npm run lint; npm run spec; npm run features"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mjhm/cucumber-api.git"
  },
  "keywords": [
    "cucumber",
    "lodash-match-pattern"
  ],
  "author": "John McLaughlin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mjhm/cucumber-api/issues"
  },
  "homepage": "https://github.com/mjhm/cucumber-api#readme",
  "files": [
    "lib",
    "index.js"
  ],
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "babel-plugin-transform-flow-strip-types": "^6.21.0",
    "babel-register": "^6.18.0",
    "cucumber": "^1.3.1",
    "eslint": "^3.12.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.7.1",
    "flow-bin": "^0.37.0",
    "http-proxy": "^1.15.2",
    "mocha": "^3.1.2",
    "ps-node": "^0.1.4",
    "sqlite3": "^3.1.8"
  },
  "dependencies": {
    "bluebird": "^3.4.0",
    "body-parser": "^1.15.2",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "express": "^4.14.0",
    "handlebars": "^4.0.5",
    "knex": "^0.12.6",
    "lodash": "^4.13.1",
    "lodash-match-pattern": "^1.1.0",
    "minimist": "^1.2.0",
    "randexp": "^0.4.3",
    "request": "^2.75.0",
    "request-promise": "^4.1.1"
  }
}
